{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types/"
    ],
		"outDir": "lib"
  },

  "include": [
		"./src/**/*"
	],
  "exclude": [
    "**/*-aot.ts"
  ],

  "angularCompilerOptions": {
		"genDir": "lib/ngfactory",
		"entryModule": "./src/app/app.module#AppModule"
  }
}
